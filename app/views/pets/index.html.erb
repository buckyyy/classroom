<p id="notice"><%= notice %></p>
  <% if notice != nil %>
<p id="notice" class="alert alert-success" role="alert">
      <%= notice %>
    </p>
  <% end %>

<h1>Best Song Entries</h1>

  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-3">
       <div class="panel panel-default">
        <div class="panel-body">
         <h4><%= pet.name %></h4>
         <h3><%= pet.age %></h3>
         <h3><%= pet.breed %></h3>
         <p><%= pet.vaccinated %></p>
       
         <div class="btn-group">
          <%= link_to 'Show', pet, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-default" %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'New Pet', new_pet_path, class: "btn btn-default" %>
